<Window x:Class="WpfCollectionViewSample.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:WpfCollectionViewSample.ViewModels;assembly=WpfCollectionViewSample.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        Title="CollectionView MVVM Sample"
        Width="700"
        Height="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 전체 멤버 목록 -->
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="전체 멤버 (All Members)"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10" />

        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 ItemsSource="{Binding AllMembers}"
                 Margin="0,0,10,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"
                                   Width="100" />
                        <TextBlock Text="{Binding Department}"
                                   Width="100" />
                        <TextBlock Text="{Binding IsActive, StringFormat='활성: {0}'}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- 활성 멤버만 필터링된 목록 -->
        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   Text="활성 멤버만 (Active Members Only)"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10" />

        <ListBox Grid.Row="1"
                 Grid.Column="1"
                 ItemsSource="{Binding ActiveMembers}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"
                                   Width="100" />
                        <TextBlock Text="{Binding Department}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- 새 멤버 추가 폼 -->
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,20,0,0">
            <TextBox Text="{Binding NewMemberName, UpdateSourceTrigger=PropertyChanged}"
                     Width="120"
                     Margin="0,0,10,0" />
            <TextBox Text="{Binding NewMemberDepartment, UpdateSourceTrigger=PropertyChanged}"
                     Width="120"
                     Margin="0,0,10,0" />
            <CheckBox Content="활성"
                      IsChecked="{Binding NewMemberIsActive}"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0" />
            <Button Content="추가"
                    Command="{Binding AddMemberCommand}"
                    Padding="20,5" />
        </StackPanel>
    </Grid>
</Window>
