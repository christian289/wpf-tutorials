<Window x:Class="WpfPopupSample.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Popup Focus Sample"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Popup Focus Management Demo"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center" />

            <TextBlock Text="다른 앱으로 전환 후 돌아와도 Popup이 정상 동작합니다."
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20" />

            <Button x:Name="ShowPopupButton"
                    Content="Show Popup"
                    Padding="20,10"
                    Click="ShowPopupButton_Click" />

            <Popup x:Name="popup"
                   PlacementTarget="{Binding ElementName=ShowPopupButton}"
                   Placement="Bottom"
                   StaysOpen="False"
                   AllowsTransparency="True">
                <Border Background="White"
                        BorderBrush="#2D5460"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Popup Content"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />
                        <TextBlock Text="This is a popup example." />
                        <Button Content="Close"
                                Margin="0,10,0,0"
                                Padding="10,5"
                                Click="ClosePopup_Click" />
                    </StackPanel>
                </Border>
            </Popup>
        </StackPanel>
    </Grid>
</Window>
