<Window x:Class="WpfCustomControlSample.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WpfCustomControlSample.Controls;assembly=WpfCustomControlSample.Controls"
        mc:Ignorable="d"
        Title="CustomControl Sample"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="CustomControl Demo"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center" />

            <controls:CustomButton Content="Default Button"
                                   Margin="0,5" />

            <controls:CustomButton Content="Custom CornerRadius"
                                   CornerRadius="20"
                                   Margin="0,5" />

            <controls:CustomButton Content="No CornerRadius"
                                   CornerRadius="0"
                                   Margin="0,5" />
        </StackPanel>
    </Grid>
</Window>
