<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="using:AvaloniaCollectionViewSample.ViewModels"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        x:Class="AvaloniaCollectionViewSample.App.Views.MainWindow"
        x:DataType="viewmodels:MainViewModel"
        Title="Avalonia CollectionView Sample"
        Width="700" Height="500">

    <Grid Margin="20" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*">

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="전체 멤버 (All Members)"
                   FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />

        <ListBox Grid.Row="1" Grid.Column="0"
                 ItemsSource="{Binding AllMembers}"
                 Margin="0,0,10,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Name}" Width="80" />
                        <TextBlock Text="{Binding Department}" Width="80" />
                        <TextBlock Text="{Binding IsActive, StringFormat='활성: {0}'}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="활성 멤버만 (Active Only)"
                   FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />

        <ListBox Grid.Row="1" Grid.Column="1"
                 ItemsSource="{Binding ActiveMembers}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Name}" Width="80" />
                        <TextBlock Text="{Binding Department}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                    Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
            <TextBox Text="{Binding NewMemberName}" Width="120" Watermark="이름" />
            <TextBox Text="{Binding NewMemberDepartment}" Width="120" Watermark="부서" />
            <CheckBox Content="활성" IsChecked="{Binding NewMemberIsActive}" />
            <Button Content="추가" Command="{Binding AddMemberCommand}" />
        </StackPanel>

    </Grid>
</Window>
