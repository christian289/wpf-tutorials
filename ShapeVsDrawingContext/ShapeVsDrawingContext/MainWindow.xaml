<Window x:Class="ShapeVsDrawingContext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ShapeVsDrawingContext.Controls"
        xmlns:vm="clr-namespace:ShapeVsDrawingContext.ViewModels"
        mc:Ignorable="d"
        Title="Shape vs DrawingContext 성능 비교" Height="600" Width="1000">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 상단 컨트롤 영역 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Content="시작" Command="{Binding StartCommand}" Width="100" Height="30" Margin="5" />
            <Button Content="초기화" Command="{Binding ClearCommand}" Width="100" Height="30" Margin="5" />
        </StackPanel>

        <!-- 메인 비교 영역 (5:5 분할) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 왼쪽: Shape 방식 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Background="#E3F2FD" Margin="5,0">
                    <TextBlock Text="Shape (Polygon)" FontSize="16" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="5" />
                    <TextBlock Text="{Binding ShapeElapsedTime, StringFormat='소요 시간: {0}'}"
                               HorizontalAlignment="Center" Margin="5" />
                </StackPanel>
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <controls:ShapeTrianglePanel x:Name="ShapePanel"
                                                  Background="White"
                                                  ClipToBounds="True" />
                </Border>
            </Grid>

            <!-- 구분선 -->
            <Rectangle Grid.Column="1" Fill="DarkGray" />

            <!-- 오른쪽: DrawingContext 방식 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Background="#E8F5E9" Margin="5,0">
                    <TextBlock Text="DrawingContext" FontSize="16" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="5" />
                    <TextBlock Text="{Binding DrawingContextElapsedTime, StringFormat='소요 시간: {0}'}"
                               HorizontalAlignment="Center" Margin="5" />
                </StackPanel>
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5" Background="White">
                    <controls:DrawingContextTrianglePanel x:Name="DrawingContextPanel"
                                                           ClipToBounds="True" />
                </Border>
            </Grid>
        </Grid>

        <!-- 하단 상태 표시 -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <TextBlock Text="{Binding StatusMessage}"
                       HorizontalAlignment="Center"
                       FontSize="14" />
        </Border>
    </Grid>
</Window>
